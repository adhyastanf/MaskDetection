generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  User_Id String @id @default(cuid())
  Nama_Depan String 
  Nama_Belakang String
  birthdate DateTime @db.Date
  gender Boolean
  Foto String?
  Nomor_Telepon String @unique
  Email String @unique
  Password String 
  Username String @unique
  Verifikasi_Masker Verifikasi_Masker?
  Security Security[]
  DataScientist DataScientist[]
  
  // @@unique([Email,Nomor_Telepon,Username])
}

model Verifikasi_Masker{
  Verified_Id String @id @default(cuid())
  UserVerified_Id String @unique
  User User? @relation(fields: [UserVerified_Id], references: [User_Id])
  Data_Harian Data_Harian?
}

model Data_Harian{
  dataHarian_Id String @id @default(cuid())
  UserHarian_Id String @unique
  Verified Verifikasi_Masker? @relation(fields: [UserHarian_Id],references: [UserVerified_Id])
  Jumlah Int
  Statistik_Periodik Statistik_Periodik[]
}

model Statistik_Periodik{
  Statistik_Id String @id @default(cuid())
  dataHarian_Id String
  dataHarian Data_Harian? @relation(fields: [dataHarian_Id],references: [dataHarian_Id])
}

model Security{
  Security_Id String @id @default(cuid())
  User User? @relation(fields: [User_Id],references: [User_Id])
  User_Id String 
}

model DataScientist{
  DataScientist_Id String @id @default(cuid())
  User User? @relation(fields: [User_Id],references: [User_Id])
  User_Id String 
}







